{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "pnpm clean",
      "pnpm package",
      "pnpm format",
      "pnpm test"
    ]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
